{
  "manifest_version": 3,
  "name": "Eidolon - Claude.ai Integration",
  "version": "1.0.0",
  "description": "Seamless Claude.ai project and knowledge management directly from your browser",
  "author": "jms830",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "cookies",
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "optional_permissions": [
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Eidolon - Claude.ai Integration"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "MacCtrl+Shift+E"
      }
    },
    "quick_upload": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "MacCtrl+Shift+U"
      },
      "description": "Quick upload to Claude project"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
